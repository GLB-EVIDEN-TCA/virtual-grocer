{
  "Sample": {
    "Title": "An ASP.NET Core 2.x Web App which sign-in users with either work and school or Microsoft personal accounts",
    "Level": 200,
    "Client": "ASP.NET Core 2.x Web App",
    "Service": "Microsoft Graph",
    "RepositoryUrl": "microsoft-identity-platform-aspnetcore-webapp-tutorial",
    "Endpoint": "AAD v2.0"
  },

  "AADApps": [
    {
      "Id": "webApp",
      "Name": "WebApp",
      "Kind": "WebApp",
      "Audience" : "AzureADandPersonalMicrosoftAccount",
       "HomePage": "https://localhost:44321/",
      "ReplyUrls": "https://localhost:44321/, https://localhost:44321/signin-oidc",
      "LogoutUrl": "https://localhost:44321/signout-oidc",
      "ManualSteps": [
        {
          "Comment" :  "Navigate to the portal and change the ','signInAudeince' to 'AzureADandPersonalMicrosoftAccount'  in the app's manifest !"
        }
      ]

    }  
  ],

  "CodeConfiguration": [
    {
      "App": "webApp",
      "SettingKind": "JSon",
      "SettingFile": "\\..\\appsettings.json",
      "Mappings": [
        {
          "key": "ClientId",
          "value": ".AppId"
        },
        {
          "key": "Domain",
          "value": "$tenantName"
        },
        {
          "key": "TenantId",
          "value": "$commonendpoint"
        }
      ]
    }
  ]
}
